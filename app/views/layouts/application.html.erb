<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <!--Account Navigation-->
    <div id="top">
      <div id="ffflourish_logo">
        <%= link_to (image_tag 'logo.png', :size => "132x36",
                                           :alt => "ffflourish"), root_path %>
      </div>
      <!--Devise Notice and Alert Messages-->
      <div id="notifications">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>
      <% if user_signed_in? %>
        <%= render 'layouts/nav' %>
      <% end %>
    </div>
    <!---------Main--------->
    <div id="main">
      <div id="left_column">
        <%= yield %>
      </div>
      <% if user_signed_in? %>
        <div id="right_side_column">
          <%= render 'layouts/right_column' %>
        </div>
      <% else %>
        <div id="right_side_info">
          <%= render 'layouts/right_info' %>
        </div>
      <% end %>
      <!--Footer with Site Navigation Links-->
      
    </div>
    <div id="footer">
        <%= render 'layouts/footer' %>
    </div>
    <div id="debug">
      <% if Rails.env.development? %>
        <%= debug(params) %>
        <%= debug(session) %>
      <% end %>
    </div>
  </body>
</html>

