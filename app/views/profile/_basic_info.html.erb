<%= render 'shared/name_menu_bar' %>
<div id="user_photo">
  <%= link_to (image_tag "#{@user.profile.avatar.profile_image.url}"), edit_user_profile_path(@user, @user.profile) %>
</div>
<% if current_user == @user %>
  <%= link_to "upload a profile image", edit_user_path(@user) %>
<% end %>
<div id="about_me">
  <%= @user.profile.about_me %>
</div>
<div id="profile_table">
  <table>
    <tr>
      <td class="profile_title">birthday:</td>
      <% unless @user.profile.birthday == nil %>
        <td><%= @user.profile.birthday.strftime("%B %dth, %Y") %></td>
      <% end %>
    </tr>
    <% @user.profile.locations.each do |loc| %>
      <tr>
        <td class="profile_title">location:</td>
        <td><%= loc.city %></td>
        <td><%= loc.state %></td>
        <td><%= loc.country %></td>
      </tr>
    <% end %>
    <% @user.profile.websites.each do |web| %>
      <tr>
        <td class="profile_title">websites:</td>
        <td><%= web.url %></td>
      </tr>
    <% end %>
  </table>
  <br>
</div>
