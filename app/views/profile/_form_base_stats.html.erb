<div id="profile_avatar">
  <%= image_tag @user.profile.avatar.profile_image.url, :class => "avatar_img" %>
  <div id="photo_upload">
    <%= f.file_field    :avatar, :id => "file_upload" %>
    <%= f.hidden_field  :avatar_cache %>
  </div>
</div>
<div id="edit_profile_left">
  <p class="signin_fields">
    <%= f.label       :name, "name", :class => "signin_label" %>
    <%= f.text_field  :name, :class => "profile_field_left" %>
  </p>
  <p class="signin_fields">
    <%= f.label       :handle, "about me", :class => "signin_label" %>
    <%= f.text_field  :handle, :class => "profile_field_left" %>
  </p>
</div>
<div id="edit_profile_right">
  <p class="signin_fields">
    <%= link_to "edit e-mail",
          edit_user_registration_path(@user),
          :class => ["signin_label", "text_darkgreen", "edit_profile_link"] %>
    <span class="profile_field_right"> <%= @user.email %> </span>
  </p>
  <p class="signin_fields">
    <%= link_to "edit password",
          edit_user_registration_path(@user),
          :class => ["signin_label", "text_darkgreen", "edit_profile_link"] %>
    <span class="profile_field_right"> ************** </span>
  </p>
</div>

