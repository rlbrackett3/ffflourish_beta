<div id="users_container">
  <ul id="users_list">
    <% @users.each do |user| %>
      <li class="user_container">
        <span class="user_avatar">
          <%= link_to (image_tag user.profile.avatar.avatar.url), user_path(user) %>
        </span>
        <span class="user_identification">
          <p class="user_name">
            <%= link_to user.profile.name, user_path(user) %>
          </p>
          <p class="user_title">
            <%= user.profile.handle %>
          </p>
          <span class="user_stats">
            <ul>
              <li>
                <%= "#{user.profile.posts_count} 
                ff#{make_this_plural(user.profile.posts_count, 'flourish')}" %>
              </li>
              <li><%= "#{user.profile.following_count} following" %></li>
              <li>
                <%= "#{user.profile.follower_count} 
                #{make_this_plural(user.profile.follower_count, 'follower')}" %>
              </li>
            </ul>
          </span>
        </span>
        
        <span class="following_links user_follow_link" id="follow_link_<%= user.id %>">
          <% if user.followers.include?(current_user) %>
            <%= link_to "unfollow", unfollow_user_path(user),
                              :class => 'unfollow_me',
                              :remote => true,
                              :id => "unfollow_me_#{user.id}",
                              :confirm => "are you sure you want to unfollow #{user.profile.name}" %>
          <% else %>
            <% if user != current_user %>
              <span class="follow_me_link">
                <%= link_to "Follow", follow_user_path(user), 
                                :class => 'follow_me',
                                :remote => true,
                                :id => "follow_me_#{user.id}" %>
              </span>
            <% end %>
          <% end %>
        </span>
      </li>
    <% end %>
  </ul>
</div>
