<% case %>
<% when @feed_items %>
  <% unless @feed_items.empty? %>
      <div id="results">
        <ul class="feed">
          <%= render :partial => 'shared/feed_item', :collection => @feed_items %>
        </ul>
      </div>
    <!--<%= pageless(@feed_items.total_pages, user_following_path) %>-->
  <% end %>
  <div id="pagination"><%= will_paginate @feed_items %></div>
<% when @popular_posts %>
  <div id="results">
    <ul class="feed">
      <%= render :partial => 'shared/feed_item', :collection => @popular_posts %>
    </ul>
    <div id="pagination"><%= will_paginate @popular_posts %></div>
  </div>
<% when @recent_posts %>
  <div id="results">
    <ul class="feed">
      <%= render :partial => 'shared/feed_item', :collection => @recent_posts %>
    </ul>
    <div id="pagination"><%= will_paginate @recent_posts %></div>
  </div>
<% end %>

