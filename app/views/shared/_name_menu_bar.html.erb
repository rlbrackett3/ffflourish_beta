<% @user ||= current_user %>
<div id="user_page_header">
  <span id="user_avatar">
  <%= link_to (image_tag @user.profile.avatar.profile_image.url, :size => "64x64",
                                          :class => "profile_img",
                                          :id => "user_avatar_big"),
                                          edit_user_profile_path(@user) %>
  </span>
  <span id="user_information">
    <p id="username">
      <%= @user.profile.name %>
    </p>
    <p id="page_title">
      <% unless @page_title == nil %>
        <%= "+ #{@page_title}" %>
      <% end %>
    </p>
    <p id="user_handle">
      <% if @user == current_user %>
        <%= @user.profile.handle %>
      <% else %>
        <%= @user.profile.handle if @user.profile.handle? %>
      <% end %>
    </p>
    <span id="local_nav">
    <% unless @user == current_user %>
      <!--Following-->
      <%= render 'shared/follow_link', :user => @user %>
    <% end %>
  </span>
  </span>
</div>

