<% @user ||= current_user %>
<table border="0">
	<tr>
		<td><div class="stat_title"> status: </div> </td>
		<td><div class="stat_value"> **** </div> </td>
	</tr>
	<tr>
		<td><div class="stat_title"> likes: </div></td>
		<td><div class="stat_value"> 23 </div></td>
	</tr>
	<tr>
		<td><div class="stat_title"> posts: </div></td>
		<td>
		  <div class="stat_value">
		    <%= current_user.posts.count %>
		  </div>
		</td>
	</tr>
	<tr>
		<td><div class="stat_title"> comments: </div></td>
		<td><div class="stat_value"><%= current_user.comments.count %></div></td>
	</tr>
	<tr>
		<td>
		  <div class="stat_title">
		    <%= link_to 'following', following_user_path(current_user) %>
		  </div>
		</td>
		<td>
		  <div id="following_count" class="stat_value">
		    <%= current_user.following.count %>
		  </div>
		</td>
	</tr>
	<tr>
		<td>
		  <div class="stat_title">
		    <%= link_to 'followers', followers_user_path(current_user) %>
		  </div>
		</td>
		<td>
		  <div id="followers_count" class="stat_value">
		    <%= current_user.followers.count %>
		  </div>
		</td>
	</tr>
	<tr>
		<td><div class="stat_title"> member since: </div></td>
		<td>
		  <div class="stat_value">
		    <%= time_ago_in_words(current_user.created_at) %>
		  </div>
		</td>
	</tr>
	<tr>
		<td><div class="stat_title"> last login: </div></td>
		<td>
		  <div class="stat_value">
		    <%= time_ago_in_words(current_user.last_sign_in_at) %>
		  </div>
		</td>
	</tr>
</table>

