<% @user ||= current_user %>
<table border="0">
	<!--<tr>
		<td><div class="stat_title"> status: </div> </td>
		<td><div class="stat_value"> **** </div> </td>
	</tr>-->
	<tr>
		<td><div class="stat_title"> likes: </div></td>
		<td>
		  <div class="stat_value">
		    <%= @user.profile.likes_count %>
		  </div>
		</td>
	</tr>
	<tr>
		<td><div class="stat_title"> posts: </div></td>
		<td>
		  <div class="stat_value">
		    <%= @user.profile.posts_count %>
		  </div>
		</td>
	</tr>
	<tr>
		<td><div class="stat_title"> comments: </div></td>
		<td><div class="stat_value"><%= @user.profile.comments_count %></div></td>
	</tr>
	<tr>
		<td>
		  <div class="stat_title">
		    <%= link_to 'following:', following_user_path(@user) %>
		  </div>
		</td>
		<td>
		  <div id="following_count" class="stat_value">
		    <%= @user.profile.following_count %>
		  </div>
		</td>
	</tr>
	<tr>
		<td>
		  <div class="stat_title">
		    <%= link_to 'followers:', followers_user_path(@user) %>
		  </div>
		</td>
		<td>
		  <div id="followers_count" class="stat_value">
		    <%= @user.profile.follower_count %>
		  </div>
		</td>
	</tr>
	<tr>
		<td><div class="stat_title"> member since: </div></td>
		<td>
		  <div class="stat_value">
		    <%= time_ago_in_words(@user.created_at) %>
		  </div>
		</td>
	</tr>
	<tr>
		<td><div class="stat_title"> last login: </div></td>
		<td>
		  <div class="stat_value">
		    <%= time_ago_in_words(@user.last_sign_in_at) if @user.last_sign_in_at? %>
		  </div>
		</td>
	</tr>
</table>

