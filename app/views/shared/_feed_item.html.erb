<!--feed item-->
<li class="feed_entry">
  <div class="feed_entry_left">
    <%= link_to (image_tag feed_item.user.profile.avatar.avatar.url, 
                                                :class => "avatar_small"),
                                       user_posts_path(feed_item.user) %>
    <span class="feed_entry_following_links">
      <% if feed_item.user.followers.include?(current_user) %>
        <%= link_to "unfollow", unfollow_user_path(@user), 
                                  :class => 'unfollow_me', 
                                  :confirm => "are you sure you want to unfollow #{@user.profile.name}" %>
      <% else %>
        <% if @user != current_user %>
          <span class="follow_me_link">
            <%= link_to "Follow", follow_user_path(@user), :class => 'follow_me' %>
          </span>
        <% end %>
      <% end %>
    </span>
  </div>
  <div class="feed_entry_center">
    <span class="feed_entry_content">
      <p class="feed_entry_author">
        <%= link_to feed_item.user.name, user_posts_path(feed_item.user), 
                                                        :class => 'post_author' %>
      </p>
      <p class="feed_entry_text">
        <%= feed_item.content %>
      </p>
    </span>
    <div class="feed_entry_info">
      <%= render 'shared/feed_item_info', :f => feed_item %>
     </div>
  </div>
  <div class="feed_entry_right">
    <% if feed_item.image? %>
      <%= link_to (image_tag feed_item.image.medium.url, :class => "photo_preview"),
                                                        feed_item.image.url %>
    <% end %>
  </div> 
  <div class="border"></div>
</li>
<% if feed_item.voters? %>
  <li>
    <div id="liked_by">
      <% feed_item.voters.each do |liked| %>
        <%= liked %>
        
      <% end %>
    </div>
  </li>
<% end %>
<% if feed_item.comments.any? %>
  <li>
  
  </li>
<% end %>


