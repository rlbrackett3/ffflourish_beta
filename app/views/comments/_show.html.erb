<li class="comment">
  <div class="feed_entry_left">
    <%= render "shared/feed_avatar_follow", :f => @comment %>
  </div>
  <div class="comment_stats">
    <span class="commenter"><%= @comment.commenter %></span>
    <span class="comment_date">
      <%="said #{time_ago_in_words(@comment.created_at)} ago" %>
    </span>
    <% if @comment.commenter == current_user %>
      <%= link_to "delete",
                      user_post_comment_path(current_user, @comment.post, @comment),
                      :confirm => "Really delete this comment?",
                      :class => "delete_comment",
                      :method => :delete %>
    <% end %>
  </div>
  <span class="comment_content"><%= @comment.content %></span>
</li>

