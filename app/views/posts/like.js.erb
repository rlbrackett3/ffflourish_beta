var voteCount = $('a#<%= escape_javascript("feeditem_likers_count_#{@post.id}") %>');
var voteImage = $('#<%= escape_javascript("feeditem_likes_img_#{@post.id}") %>');

// update comment count
$(voteCount).text("<%= escape_javascript(@post.vote_count.to_s) %>");

<% if @user == current_user %>
    $('#user_like_count').text("<%= escape_javascript((@user.likes_count + 1).to_s) %>");
<% end %>

// update commented image
var d = new Date();
$(voteImage).attr("src", "/images/like_red.png?"+d.getTime());
